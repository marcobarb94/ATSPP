apt-get update
apt-get install -y git libopenmpi-dev openmpi-bin python3-pip python
pip3 install mpi4py
pip3 install numpy

mkdir ${SINGULARITY_ROOTFS}/MyRoot
cd ${SINGULARITY_ROOTFS}/MyRoot
git clone https://marcobarb94@github.com/marcobarb94/ATSPP
